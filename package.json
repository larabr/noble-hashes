{
  "name": "@noble/hashes",
  "type": "module",
  "version": "1.3.0",
  "description": "Audited & minimal 0-dependency JS implementation of SHA2, SHA3, RIPEMD",
  "files": [
    "esm",
    "src"
  ],
  "scripts": {
    "bench": "node test/benchmark/index.js noble",
    "bench:all": "node test/benchmark/index.js",
    "bench:install": "cd test/benchmark && npm install && cd ../../",
    "build": "npm run build:clean; tsc -p tsconfig.esm.json",
    "build:release": "cd build; npm i; npm run build",
    "build:clean": "rm *.{js,d.ts,js.map} esm/*.{js,js.map} 2> /dev/null",
    "lint": "prettier --check 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "test": "node test/index.js",
    "test-browser": "karma start karma.conf.cjs",
    "test-browserstack": "karma start karma.conf.cjs --browsers bs_safari_13_1",
    "test:dos": "node test/slow-dos.test.js",
    "test:big": "node test/slow-big.test.js"
  },
  "author": "Paul Miller (https://paulmillr.com)",
  "homepage": "https://paulmillr.com/noble/",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulmillr/noble-hashes.git"
  },
  "license": "MIT",
  "dependencies": {
    "@types/bn.js": "^4.11.6",
    "bn.js": "^4.11.8"
  },
  "devDependencies": {
    "@types/node": "18.11.18",
    "chai": "^4.3.7",
    "karma": "^6.4.2",
    "karma-browserstack-launcher": "^1.6.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webkit-launcher": "^2.1.0",
    "karma-webpack": "^5.0.0",
    "micro-bmark": "0.3.0",
    "micro-should": "0.4.0",
    "mocha": "^10.2.0",
    "playwright": "^1.33.0",
    "prettier": "2.8.3",
    "typescript": "5.0.2"
  },
  "exports": {
    "./biginteger": {
      "import": "./esm/biginteger/index.js"
    },
    "./ripemd160": {
      "import": "./esm/ripemd160.js"
    },
    "./sha1": {
      "import": "./esm/sha1.js"
    },
    "./sha3-addons": {
      "import": "./esm/sha3-addons.js"
    },
    "./sha3": {
      "import": "./esm/sha3.js"
    },
    "./sha256": {
      "import": "./esm/sha256.js"
    },
    "./sha512": {
      "import": "./esm/sha512.js"
    },
    "./utils": {
      "import": "./esm/utils.js"
    }
  },
  "keywords": [
    "sha",
    "sha2",
    "sha3",
    "sha256",
    "sha512",
    "keccak",
    "ripemd160",
    "hash",
    "cryptography",
    "security",
    "noble"
  ],
  "funding": [
    {
      "type": "individual",
      "url": "https://paulmillr.com/funding/"
    }
  ]
}
