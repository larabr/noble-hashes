{
    "compilerOptions": {
        "strict": true,
        "outDir": "esm",
        "target": "es2020",
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": false,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "declarations",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@noble/hashes/crypto": [ "src/crypto" ]
        },
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "lib",
    ],
}
